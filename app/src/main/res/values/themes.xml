<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HungryDev" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarStyle">@style/Widget.HungryDev.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.HungryDev.ActionBar</item>
    </style>

    <style name="Theme.HungryDev" parent="Base.Theme.HungryDev" />

    <style name="Widget.HungryDev.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/purple_500</item>
        <item name="titleTextStyle">@style/TextAppearance.HungryDev.ActionBar.Title</item>
        <item name="subtitleTextStyle">@style/TextAppearance.HungryDev.ActionBar.Subtitle</item>
    </style>

    <style name="TextAppearance.HungryDev.ActionBar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.HungryDev.ActionBar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.HungryDev.ActionBar" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="toolbarStyle">@style/Widget.HungryDev.Toolbar</item>
    </style>

    <style name="Widget.HungryDev.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>
</resources>